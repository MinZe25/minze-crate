<Window x:Class="Minze_Crate.SelectName"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Minze_Crate"
      mc:Ignorable="d"
      Title="SelectName" ResizeMode="NoResize" Height="197" Width="446" WindowStartupLocation="CenterScreen">

    <StackPanel HorizontalAlignment="Center" Height="225" Width="300">
        <StackPanel Margin="0,20,0,0">
            <Label HorizontalAlignment="Center" Content="Select a new config name"/>
            <TextBox  KeyDown="UserNameInput_KeyDown"  x:Name="userNameInput" TabIndex="0"/>
        </StackPanel>
        <StackPanel Margin="0,20,0,0">
            <Button Content="Accept" Click="Button_Click"/>

        </StackPanel>
        <StackPanel Margin="0,20,0,0">

            <Button Content="Cancel" Click="Button_Click_1"/>
        </StackPanel>
    </StackPanel>
</Window>
