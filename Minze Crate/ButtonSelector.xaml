<Window x:Class="Minze_Crate.ButtonSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minze_Crate"
        mc:Ignorable="d"
        Title="Button Selector" Height="500" Width="400" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Grid Height="429">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="buttonPanel" Margin="7">
                    <Button Content="None" Background="{x:Null}" Click="Button_Click" Height="40"></Button>
                    <Separator></Separator>
                </StackPanel>
            </ScrollViewer>

        </Grid>
        <StackPanel Margin="7" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="185" Height="31" Margin="0,0,5,0" Click="Cancel_Click"/>
            <Button Content="Accept" HorizontalAlignment="Right" VerticalAlignment="Center" Width="185" Height="31" Margin="5,0,0,0" Click="Ok_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
